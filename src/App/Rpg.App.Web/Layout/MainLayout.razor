@inherits LayoutComponentBase
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <AuthorizeView>
            <Authorized>
                <strong>Hello, @context.User.Identity.Name!</strong>
                <a href="@context.User.FindFirst("bff:logout_url")?.Value">Log out</a>
            </Authorized>
            <NotAuthorized>
                <a href="bff/login">Log in</a>
            </NotAuthorized>
        </AuthorizeView>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
